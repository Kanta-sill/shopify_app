<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shop_analytic_view_tree" model="ir.ui.view">
        <field name="name">shopify.analytic.tree</field>
        <field name="model">shopify.analytic</field>
        <field name="arch" type="xml">
            <tree string="Analytic">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="shopify_analytic__view_form" model="ir.ui.view">
        <field name="name">shopify.analytic.form</field>
        <field name="model">shopify.analytic</field>
        <field name="arch" type="xml">
            <form string="Analytic" js_class="mastershop_report_analytic">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="shop_id"/>
                    </group>
                    <iframe id="mastershop_report_dashboard_iframe" src="/report/mastershop_report_dashboard"
                            class="col-12" style="width: 100%; height: 800px; border: none">
                    </iframe>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shop_analytic_action" model="ir.actions.act_window">
        <field name="name">Analytic</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shopify.analytic</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="shop_app_root" name="Shop App" sequence="7"/>
    <menuitem id="shop_analytic" name="Analytic" parent="shop_app_root" action="shop_analytic_action"/>

</odoo>